{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "flutter_app_dev",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define",
                "DEV=true",
                "--dart-define",
                "OFFLINE=true",
                "--dart-define",
                "IP=http://localhost:8000"
            ]
        },
        {
            "name": "flutter_app",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define",
                "DEV=true",
                "--dart-define",
                "OFFLINE=false",
                "--dart-define",
                "IP=http://srv08.mikr.us:20364"
            ]
        },
        {
            "name": "flutter_app (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "flutter_app (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}